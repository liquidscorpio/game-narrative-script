:character Radius{name: "Radius"}
:character DrBread{name: "Dr. Bread", age: "32"}
:act Act1
:act DoingGood
:act NotSoWell

%define Act1 {
    @Radius "Hello, how are you?"
    @DrBread "Thanks, I'm good! And you?"
    @Radius [
        "No, I'm cool" DoingGood,
        "Not so well." NotSoWell,
    ]
}

%define DoingGood {
    @DrBread "Oh well, then I'd rather walk away."
}

%define NotSoWell {
    @DrBread "Keep up the good work!"
}
